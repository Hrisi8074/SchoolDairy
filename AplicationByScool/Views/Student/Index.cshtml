
@model IEnumerable<SchoolDairy.Data.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h2>Student List</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Classroom</th>
            <th>Number</th>
            <th>Form of Training</th>
            <th>Specialty</th>
            <th>Parent</th>
            <th>Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.MiddleName</td>
                <td>@student.LastName</td>
                <td>@student.Classroom</td>
                <td>@student.Number</td>
                <td>@student.FormOfTraining</td>
                <td>@student.StudentSpeciality.Name</td>
                <td>@student.Parent.FirstName @student.Parent.LastName </td>
                <td>@student.Teacher.FirstName @student.Teacher.LastName </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddStudent" class="btn btn-primary">Add New Student</a>

