@using SchoolDairy.Views.Parent
@model AddParentValidation
 
<h2>Add a Registration</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="FirstName">Parent Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" type="number" class="form-control" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <label asp-for="EmailAddres">Email Addres</label>
        <input asp-for="EmailAddres" class="form-control" />
        <span asp-validation-for="EmailAddres"></span>
    </div>
    <div>
        <label asp-for="UserNameParent">User Name</label>
        <input asp-for="UserNameParent" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create Registration</button>
</form>

